<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/meal_item_margin">


    <ImageView
        android:id="@+id/mealPhotoId"
        android:layout_width="@dimen/meal_item_photo_width"
        android:layout_height="@dimen/meal_item_photo_height"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/meal_image_description" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/meal_item_margin">

        <TextView
            android:id="@+id/mealNameId"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/meal_name_template"
            android:textSize="@dimen/meal_item_title_size"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mealCategoryAndOriginId"
            android:layout_width="wrap_content"
            android:text="@string/meal_category_template"
            android:singleLine="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/mealYoutubeLinkId"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/youtube_link"
            android:textColor="@android:color/holo_blue_light"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>